{
  "manifest_version": 3,
  "name": "Sovcombank Scripts Helper",
  "version": "1.0.0",
  "description": "Подбирает индивидуальные скрипты для страницы Клиента Совкомбанка.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "file:///*",
    "https://raw.githubusercontent.com/Wooinpoorin/sovcombank-scripts/main/data/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}