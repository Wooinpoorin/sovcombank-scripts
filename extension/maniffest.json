{
  "manifest_version": 3,
  "name": "Совкомбанк: Скрипт-Генератор",
  "version": "1.2.0",
  "description": "Автоматическая генерация 5 скриптов для клиента",
  "permissions": ["storage","activeTab","scripting"],
  "host_permissions": [
    "https://raw.githubusercontent.com/<USERNAME>/sovcombank-scripts/main/data/*"
  ],
  "action": {"default_popup": "popup.html"},
  "background": {"service_worker": "background.js"}
}